# Backend Environment Variables
NODE_ENV=development
PORT=3000

# AWS Configuration (Sydney Region)
AWS_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# AWS Bedrock
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_MAX_TOKENS=4096
BEDROCK_TEMPERATURE=0.7

# DynamoDB Tables
DYNAMODB_CONVERSATIONS_TABLE=ai-chatbot-conversations
DYNAMODB_DOCUMENTS_TABLE=ai-chatbot-documents
DYNAMODB_USERS_TABLE=ai-chatbot-users
DYNAMODB_TRAINING_TABLE=ai-chatbot-training

# S3 Buckets
S3_DOCUMENTS_BUCKET=ai-chatbot-documents
S3_MEDIA_BUCKET=ai-chatbot-media
S3_TRAINING_BUCKET=ai-chatbot-training

# OpenSearch
OPENSEARCH_NODE=https://your-opensearch-domain.ap-southeast-2.es.amazonaws.com
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=your_password_here
OPENSEARCH_DOCUMENTS_INDEX=ai-chatbot-documents
OPENSEARCH_CONVERSATIONS_INDEX=ai-chatbot-conversations

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Performance
TARGET_RESPONSE_TIME=5000
MAX_CONCURRENT_REQUESTS=100
CACHE_ENABLED=true

# CORS
FRONTEND_URL=http://localhost:3001
ADMIN_URL=http://localhost:5173